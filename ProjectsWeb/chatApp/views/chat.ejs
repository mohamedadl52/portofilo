<div style="display: none;">
  <%- include('./partials/header') %> 
</div>
<section style="background-color: #eee;">
  <a href="/" class="text-primary mt-5 d-block " style="direction: rtl; margin-right:20px ;"> go to home </a>
    <div class="container py-5">
      
      <div class="row">
      
            <div class="col-md-6 col-lg-5 col-xl-4 mb-4 mb-md-0">
                   <p><%= myname %></p>   
                   <div id="videoCall" class="btn btn-success"> video Call</div>
                
                      <input type="text" id="formdata" hidden value="<%= formdata.username %>"> 
                      <input type="text" id="chatId" hidden value="<%= chatId %>"> 
            </div>
      
            <div class="col-md-6 col-lg-7  col-xl-8">
                
                <ul id="con" style="height: 400px; overflow: scroll;" class="list-unstyled">
                  <% if(messages.length == null){ %>
                         <li class="alert alert-danger" id="nomsg"> no Messages yet</li>
                  <% } else { %>
                    <% for (let Message of messages  ) { %>

                      <li class="d-flex justify-content-between mb-4">
                        <img src="/assets/img/user.png" alt="avatar"
                          class="rounded-circle d-flex align-self-start me-3 shadow-1-strong" width="60">
                        <div class="card w-100">
                          <div class="card-header d-flex justify-content-between p-3">
                            <p class="fw-bold mb-0"><%= Message.sender.username  %></p>
                            <p class="text-muted small mb-0"><i class="far fa-clock"></i> 12 mins ago</p>
                          </div>
                          <div class="card-body">
                                  <p class="mb-0">
                                    <%= Message.content %>
                                  </p>
      
                            </div>
                              </div>
                          </li>
                                       
                       
                     <%  } %>
                  <% } %>
                   
                      
                </ul>
                
                <div class="form-outline">
                  <textarea class="form-control" id="msg" rows="4"></textarea>
                  <label class="form-label" for="textAreaExample2">Message</label>
                </div>
                <button type="button" id="sendMsg" class="btn btn-info btn-rounded float-end">Send</button>
              </div>
      
          </div>
      
        </div>
      </section>
  <!-- Vendor JS Files -->
  <script src="/assets/vendor/purecounter/purecounter_vanilla.js"></script>
  <script src="/assets/vendor/aos/aos.js"></script>
  <script src="/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
  <script src="/assets/vendor/glightbox/js/glightbox.min.js"></script>
  <script src="/assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>
  <script src="/assets/vendor/swiper/swiper-bundle.min.js"></script>
  <script src="/assets/vendor/php-email-form/validate.js"></script>
  <script src="/socket.io/socket.io.js"></script>
  <!-- Template Main JS File -->
  <script src="/assets/js/main.js"></script> 
  <script src="/assets/js/peer.js"></script> 

  <!-- <script src="/assets/js/init.socket.js"></script>  -->

  <script src="/assets/js/chat.socket.js"></script> 


</body>

</html>